<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.study.SpringSecurityMybatis.repository.BoardLikeMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <!--useGeneratedKeys="true" keyProperty="id" : AutoIncrement 된 값이 id에 들어간다 !!-->
        insert into board_like
        values(default, #{boardId}, #{userId})
    </insert>

    <delete id="deleteById">
        delete
        from
            board_like
        where
            id = #{id}


    </delete>

    <select id="findByBoardIdAndUserId" resultType="com.study.SpringSecurityMybatis.entity.BoardLike">
        select
            id,
            board_id as boardId,
            user_id as userId,
        from
            board_like
        where
            board_id = #{boardId}
            and user_id = #{userId}
    </select>

    <select id="getLikeCountByBoardId" resultType="java.lang.Integer">
        select
            count(*)
        from
            board_like
        where
            board_id = #{boardId}
    </select>
</mapper>